{
  "name": "phlock",
  "version": "0.1.0",
  "private": true,
  "description": "Phlock - A social layer for music discovery that makes peer recommendations measurable and rewarding",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:dashboard": "cd apps/artist-dashboard && npm run dev",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:android": "cd apps/mobile && npm run android",
    "build": "turbo run build",
    "test": "jest",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "turbo": "^1.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/woon-1/phlock.git"
  },
  "keywords": [
    "music",
    "social",
    "discovery",
    "streaming",
    "spotify",
    "apple-music"
  ],
  "author": "woon-1",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "jsonwebtoken": "^9.0.2"
  }
}
